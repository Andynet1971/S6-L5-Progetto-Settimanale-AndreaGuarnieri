@model S6_L5_Progetto_Settimanale_AndreaGuarnieri.Models.ViewModels.ServizioAggiuntivoViewModel

@{
    ViewData["Title"] = "Aggiungi Servizio Aggiuntivo";
}

<div class="form-container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="AddServizioAggiuntivo" method="post">
        <div class="form-group">
            <label asp-for="PrenotazioneID"></label>
            <input asp-for="PrenotazioneID" class="form-control" readonly />
            <span asp-validation-for="PrenotazioneID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ServizioID"></label>
            <select asp-for="ServizioID" class="form-control" asp-items="@(new SelectList(Model.ServiziDisponibili, "ID", "Nome"))"></select>
            <span asp-validation-for="ServizioID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data"></label>
            <input asp-for="Data" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantita"></label>
            <input asp-for="Quantita" class="form-control" />
            <span asp-validation-for="Quantita" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Salva</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
